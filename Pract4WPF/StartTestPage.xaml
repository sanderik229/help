                IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                Style="{StaticResource MaterialDesignRaisedDarkButton}"
                ToolTip="MaterialDesignRaisedDarkButton with Round Corners">
                <TextBlock
                    x:Name="textBlock1"
                    Text="" />
            </Button>
        </Grid>-->
        <Button
            Foreground="FloralWhite"
            x:Name="answer2_of_test_button"
            Grid.Row="3"
            Click="Answer2_of_test_button_OnClick" Background="#FF794875"
        />
        <Button
            Foreground="FloralWhite"
            x:Name="answer3_of_test_button"
            Grid.Row="4"
            Click="Answer3_of_test_button_OnClick" Background="#FF794875"
        />
    </Grid> 
</Page>
